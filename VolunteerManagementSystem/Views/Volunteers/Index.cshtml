@model IEnumerable<VolunteerManagementSystem.Models.Volunteer>

@{
    ViewData["Title"] = "Volunteers";
    var status = ViewBag.Status as string ?? "";
    var q = ViewBag.Query as string ?? "";
}

<h1>Volunteers</h1>

<div class="mb-3">
    <a class="btn btn-outline-secondary btn-sm" asp-controller="Home" asp-action="Index">Dashboard</a>
    <a class="btn btn-outline-secondary btn-sm" asp-controller="Opportunities" asp-action="Index">Opportunities</a>
</div>

<form method="get" class="mb-3" style="display:flex; gap:10px; align-items:center; flex-wrap:wrap;">
    <label class="form-label mb-0">Status</label>
    <select name="status" class="form-select" style="max-width:220px;">
        <option value="" selected="@(status == "")">(All)</option>
        <option value="Approved" selected="@(status == "Approved")">Approved</option>
        <option value="PendingApproval" selected="@(status == "PendingApproval")">Pending Approval</option>
        <option value="Disapproved" selected="@(status == "Disapproved")">Disapproved</option>
        <option value="Inactive" selected="@(status == "Inactive")">Inactive</option>
    </select>

    <input name="q"
           value="@q"
           class="form-control"
           placeholder="Search name or email"
           style="max-width:260px;" />

    <button class="btn btn-primary" type="submit">Apply</button>
    <a class="btn btn-outline-secondary" asp-action="Index">Reset</a>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Volunteer</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.First().LastName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().ApprovalStatus)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.ApprovalStatus</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">No volunteers found. Try changing the filter or add one.</div>
}
